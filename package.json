{
  "name": "devportfolio-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter portfolio --filter lab --parallel dev",
    "dev:portfolio": "pnpm --filter portfolio dev",
    "dev:lab": "pnpm --filter lab dev",
    "build": "pnpm --filter portfolio --filter lab --parallel build",
    "build:portfolio": "pnpm --filter portfolio build",
    "build:lab": "pnpm --filter lab build",
    "start": "pnpm --filter portfolio --filter lab --parallel start",
    "start:portfolio": "pnpm --filter portfolio start",
    "start:lab": "pnpm --filter lab start",
    "start:all": "pnpm --filter portfolio --filter lab --parallel start",
    "lint": "pnpm --filter portfolio --filter lab --parallel lint",
    "lint:portfolio": "pnpm --filter portfolio lint",
    "lint:lab": "pnpm --filter lab lint",
    "test": "pnpm --filter portfolio --filter lab --parallel test",
    "test:portfolio": "pnpm --filter portfolio test",
    "test:lab": "pnpm --filter lab test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^1.11.3"
  }
}
