{
  "name": "devportfolio-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:portfolio": "pnpm --filter portfolio dev",
    "dev:lab": "pnpm --filter lab dev",
    "build": "pnpm -r build",
    "build:portfolio": "pnpm --filter portfolio build",
    "build:lab": "pnpm --filter lab build",
    "start": "pnpm start:portfolio",
    "start:portfolio": "pnpm --filter portfolio start",
    "start:lab": "pnpm --filter lab start",
    "start:all": "pnpm --parallel start:portfolio start:lab",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^1.11.3"
  }
}
